<div class="hero message-hero">
  <div class='container page-header'>
    <form>
      {{#md-card id='bidMessage'}}
      {{#md-card-content}}
      {{md-textarea value=message label="Your message" validate='true'}}
      {{/md-card-content}}
      {{/md-card}}

    {{bidResponse}}
    {{sharing}}
    {{#if hasTwitter}}

    <div class="card">
      <div class="card-content personal-content">
        <span class="card-title activator white-text text-darken-4">This is the personal information you are sharing</span>
        <div class="chip">
          <a href='http://twitter.com/{{session.currentUser.username}}' target='_blank' class="profile">
            <img src='{{session.currentUser.profileImageURL}}' height='50px' width='50px' alt='contact photo'/>
            {{session.currentUser.username}}
          </a>
        </div>
      </div>
    </div>

    {{else}}
    <div class="card">
      <div class="card-content personal-content">
        <span class="card-title activator white-text text-darken-4">This is the personal information you are sharing</span>
        {{#if sharing}}
        <div class="chip">
          <a href='http://facebook.com/{{session.currentUser.username}}' target='_blank' class="profile">
            <img src='{{session.currentUser.profileImageURL}}' height='50px' width='50px' alt='contact photo'/>
            {{session.currentUser.displayName}}
          </a>
        </div>
        {{/if}}
      </div>
    </div>
    {{/if}}
    {{md-tabs content=sharings selected=sharing}}
    <div class="or-phone">
      <h5>{{bidder.firstName}} also left a number. Send them a text or somethin :)</h5>
      <h5><i class="material-icons">contact_phone</i>{{bidder.phone}}</h5>
    </div>
  </form>
</div>
</div>
