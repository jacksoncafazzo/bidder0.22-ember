

<div class="row header-discription">
  <div class="col s12">
    <h1>Bid Description</h1>
  </div>
</div>
  <div class="row bid-description">

      <div class="column-wrap" style="height:700px;">
        <div class="col s6 inner-col" style="margin-top:0px;">
          <div class="box-1">
            <div class="nome padding">

              <h5>{{bid.title}}</h5>
              <h6>Bid Value: ${{bid.payment}}</h6>
              <h6>Location: {{bid.location}}</h6>
              <h6>Description: {{bid.description}}</h6>
              <h6>Start Date: {{bid.jobStart}}</h6>
              <h6>End Date: {{bid.jobEnd}}</h6>
              <h6>Active: {{bid.active}}</h6>
              {{#if bid.providing}}
              <h6>I am providing this service</h6>
              {{else}}
              <h6>I am seeking this service</h6>
              {{/if}}
              <h6>Bid Posted: {{moment-from-now bid.date}}</h6>
              {{#if bid.active}}
              <a {{action 'deactivateBid' bid}} class="btn">deactivate</a>
              {{else}}
              <a {{action 'activateBid' bid}} class="btn">Activate</a>
              {{/if}}
              {{log bid.marker.lat}}
            </div>
          </div>
        </div>
        <div class="col s6 inner-col col-2" style="margin-top:0;">
          <div class="box-2">
            <div class="map-circle">

            </div>
            <div class="single-bidmap">
              {{g-maps name="single-bidmap" click='placeMarker' lat=bid.latitude lng=bid.longitude zoom=15 marker=marker}}
            </div>
          </div>
        </div>
      </div>
</div>

